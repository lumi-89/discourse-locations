{{#if location}}
  {{d-button class=valueClasses title='location.label.add' action="showAddLocation" translatedLabel=valueLabel icon="map-marker-alt"}}
  {{#unless noText}}
    {{d-button icon="times" action="removeLocation" class="remove"}}
  {{/unless}}
{{else}}
  {{#if iconOnly}}
    {{d-button class="add-location-btn"
               icon="map-marker-alt"
               action="showAddLocation"
               title=addLabel}}
  {{else}}
    {{d-button class="add-location-btn"
               icon="map-marker-alt"
               label=addLabel
               action="showAddLocation"
               title=addLabel}}
  {{/if}}
{{/if}}
